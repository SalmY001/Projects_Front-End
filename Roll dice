# Roll the dice

import random
while True:
    print('''1. roll the dice
    2. exit''')
    dice = int(input("What do you want to do?\n"))
    if dice==1:
        faceNumber = random.randint(1,6)
        print("The dice has landed on",(faceNumber))
    elif 2<dice<=6:
        print("Please enter number 1 or 2")
    else:
        break
